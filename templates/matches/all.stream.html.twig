{# match/message.stream.html.twig #}

{# New messages received through the Mercure connection are appended to the div with the "messages" ID. #}

<turbo-stream action="replace" target="matches-table">
    <template>
        <div class="mdc-data-table" id="matches-table">
            <div class="mdc-data-table__table-container">
                <table class="mdc-data-table__table" aria-label="Dessert calories">
                    {% include 'matches/match-header.html.twig' %}
                    <tbody class="mdc-data-table__content">
                    {% for match in matches %}
                        {% include 'matches/match-row.html.twig' with {'match': match} %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </template>
</turbo-stream>
