{% extends 'base.html.twig' %}

{% block body %}
    {% include 'menu.html.twig' %}

    <div {{ turbo_stream_listen('games-lol') }} class="mdc-layout-grid">
        <div class="mdc-data-table table-center" id="matches-table">
            <div class="mdc-data-table__table-container">
                <table class="mdc-data-table__table" aria-label="Dessert calories">
                    {% include 'matches/match-header.html.twig' %}
                    <tbody class="mdc-data-table__content">
                    {% for match in matches %}
                        {% include 'matches/match-row.html.twig' with {'match': match} %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

